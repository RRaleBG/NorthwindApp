@page
@model NorthwindApp.Pages.ProductPages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container-sm rounded-3 text-start mt-5 mx-auto shadow-lg" style="max-width:35em;">
    <div class="row">
        <div class="text-start">
            <h3 class="mt-3">@ViewData["Title"]</h3>
        </div>
    </div>
    <div class="row justify-content-center text-center py-3 mx-auto">        
        <hr />
        <dl class="row justify-content-center">
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Product.ProductName)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Product.ProductName)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Product.Supplier)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Product.Supplier.CompanyName)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Product.Category)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Product.Category.CategoryName)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Product.QuantityPerUnit)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Product.QuantityPerUnit)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Product.UnitPrice)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Product.UnitPrice)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Product.UnitsInStock)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Product.UnitsInStock)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Product.UnitsOnOrder)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Product.UnitsOnOrder)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Product.ReorderLevel)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Product.ReorderLevel)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Product.Discontinued)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Product.Discontinued)
            </dd>
        </dl>
    </div>
    <hr />
    <form method="post" class="form-group text-end py-3">
        <input type="hidden" asp-for="Product.ProductID" />
        <input type="submit" value="Delete" class="btn btn-sm btn-danger shadow" />
        <a asp-page="./Index" class="btn btn-sm btn-success shadow">Back to List</a>
    </form>
</div>
