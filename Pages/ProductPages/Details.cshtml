@page
@model NorthwindApp.Pages.ProductPages.DetailsModel

@{
    ViewData["Title"] = "Details: " + Model.Product.ProductName;
}
<div class="container-sm rounded-3 text-start mt-5 mx-auto shadow-lg" style="max-width:35em;">
    <div class="row">
        <div class="text-start">
            <h3 class="mt-3">@ViewData["Title"]</h3>
        </div>
    </div>

    <div class="row justify-content-center text-center mx-auto">
        <hr />
        <dl class="row mt-3">           
            <dt class="col-sm-5 text-md-start">
                @Html.DisplayNameFor(model => model.Product.ProductName)
            </dt>
            <dd class="col-sm-7 text-md-start">
                @Html.DisplayFor(model => model.Product.ProductName)
            </dd>
            <dt class="col-sm-5 text-md-start">
                @Html.DisplayNameFor(model => model.Product.Supplier)
            </dt>
            <dd class="col-sm-7 text-md-start">
                @Html.DisplayFor(model => model.Product.Supplier.CompanyName)             
            </dd>
            <dt class="col-sm-5 text-md-start">
                @Html.DisplayNameFor(model => model.Product.Category)
            </dt>
            <dd class="col-sm-7 text-md-start">
                @Html.DisplayFor(model => model.Product.Category.CategoryName)
            </dd>
            <dt class="col-sm-5 text-md-start">
                @Html.DisplayNameFor(model => model.Product.QuantityPerUnit)
            </dt>
            <dd class="col-sm-7 text-md-start">
                @Html.DisplayFor(model => model.Product.QuantityPerUnit)
            </dd>
            <dt class="col-sm-5 text-md-start">
                @Html.DisplayNameFor(model => model.Product.UnitPrice)
            </dt>
            <dd class="col-sm-7 text-md-start">
                @Html.DisplayFor(model => model.Product.UnitPrice)
            </dd>
            <dt class="col-sm-5 text-md-start">
                @Html.DisplayNameFor(model => model.Product.UnitsInStock)
            </dt>
            <dd class="col-sm-7 text-md-start">
                @Html.DisplayFor(model => model.Product.UnitsInStock)
            </dd>
            <dt class="col-sm-5 text-md-start">
                @Html.DisplayNameFor(model => model.Product.UnitsOnOrder)
            </dt>
            <dd class="col-sm-7 text-md-start">
                @Html.DisplayFor(model => model.Product.UnitsOnOrder)
            </dd>
            <dt class="col-sm-5 text-md-start">
                @Html.DisplayNameFor(model => model.Product.ReorderLevel)
            </dt>
            <dd class="col-sm-7 text-md-start">
                @Html.DisplayFor(model => model.Product.ReorderLevel)
            </dd>
            <dt class="col-sm-5 text-md-start">
                @Html.DisplayNameFor(model => model.Product.Discontinued)
            </dt>
            <dd class="col-sm-7 text-md-start">
                @* @Html.DisplayFor(model => model.Product.Discontinued) *@
                @if(Model.Product.Discontinued == false)
                {
                    <p class="col-sm-7 text-md-start text-danger fw-bold small">
                        Not Discontinued
                    </p>
                }
                else
                {
                    <p class="col-sm-7 text-md-start text-success fw-bold">
                        On discount
                    </p>
                }
            </dd>                   
        </dl>
    </div>
    <hr />
    <div class="form-group text-end p-2">
        <a asp-page="./Edit" asp-route-id="@Model.Product.ProductID" class="btn btn-sm btn-success my-2 mx-auto mt-auto shadow">Edit</a>
        <a asp-page="./Index" class="btn btn-sm btn-danger my-2 mx-auto mt-auto shadow">Back to List</a>
        <a asp-page="./Edit" asp-route-id="@Model.Product.ProductID" class="bi-pen-fill fs-6" style="color:magenta"></a>
    </div>
</div>

