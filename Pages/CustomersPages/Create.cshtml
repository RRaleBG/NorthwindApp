                        <input asp-for="Customer.ContactTitle" class="form-control form-control-sm widget text-center needs-validation" validate required />
                        <span asp-validation-for="Customer.ContactTitle" class="text-danger small"></span>
                    </div>
                    <div class="form-group-sm mb-3">
