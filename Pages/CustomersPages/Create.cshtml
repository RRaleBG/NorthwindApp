                        <label asp-for="Customer.PostalCode" class="label small ms-2 p-0"></label>
                        <input asp-for="Customer.PostalCode" class="form-control form-control-sm widget text-center needs-validation" validate required />
                        <span asp-validation-for="Customer.PostalCode" class="text-danger small"></span>
                    </div>
                    <div class="form-group-sm mb-3">
                        <label asp-for="Customer.Country" class="label small ms-2 p-0"></label>
                        <input asp-for="Customer.Country" class="form-control form-control-sm widget text-center needs-validation" validate required />
                        <span asp-validation-for="Customer.Country" class="text-danger small"></span>
