                        <input asp-for="Customer.Fax" class="form-control form-control-sm widget text-center needs-validation" />
                       @*  <span asp-validation-for="Customer.Fax" class="text-danger small"></span> *@
                    </div>
                </div>
                <div class="mx-auto">
                <hr />
                    <input type="submit" value="Create" class="btn btn-sm btn-outline-success rounded-4 float-end shadow col-3 col-sm-2" />
                    <a asp-page="Index" class="btn btn-sm btn-outline-danger rounded-4 rounded-4 mx-auto mt-auto shadow text-center col-3 col-sm-2">Back</a>
