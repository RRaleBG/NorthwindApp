        <input type="hidden" asp-for="Customer.CustomerID" />
        <input type="submit" value="Delete" class="btn btn-sm btn-danger shadow" />
        <a asp-page="./Index" class="btn btn-sm btn-success shadow">Back to List</a>
    </form>
</div>