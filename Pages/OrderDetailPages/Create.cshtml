@page
@model NorthwindApp.Pages.OrderDetailPages.CreateModel
@{
    ViewData["Title"] = "New order details";
}
<div class="container-sm rounded-3 text-start mt-5 mx-auto shadow-lg" style="max-width:40em;">
    <div class="row">
        <div class="col-md-6">
            <h3 class="mt-3">@ViewData["Title"]</h3>
        </div>
    </div>
     <hr />
    <div class="row">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show text-center shadow-lg" role="alert">
                <strong>Error!</strong> @TempData["Error"]<strong></strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form method="post" class="needs-validation py-3 mx-auto" novalidate>
            <div class="row justify-content-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="OrderDetail.OrderID" class="control-label"></label>
                    <select asp-for="OrderDetail.OrderID" class ="form-control" asp-items="ViewBag.OrderID"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="OrderDetail.ProductID" class="control-label"></label>
                    <select asp-for="OrderDetail.ProductID" class ="form-control" asp-items="ViewBag.ProductID"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="OrderDetail.UnitPrice" class="control-label"></label>
                    <input asp-for="OrderDetail.UnitPrice" class="form-control needs-validation" validate required />
                    <span asp-validation-for="OrderDetail.UnitPrice" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="OrderDetail.Quantity" class="control-label"></label>
                    <input asp-for="OrderDetail.Quantity" class="form-control needs-validation" validate required />
                    <span asp-validation-for="OrderDetail.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="OrderDetail.Discount" class="control-label"></label>
                    <input asp-for="OrderDetail.Discount" class="form-control needs-validation" validate required />
                    <span asp-validation-for="OrderDetail.Discount" class="text-danger"></span>
                </div>
                <div class="mx-auto ">
                <hr />
                    <input type="submit" value="Create" class="btn btn-sm btn-primary float-end shadow col-2" />
                    <a asp-page="Index" class="btn btn-sm btn-danger shadow text-center col-2">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script defer>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>