@page
@model NorthwindApp.Pages.SupplierPages.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<div class="container-sm widget text-start mt-5 mx-auto shadow-info py-3" style="max-width:30em;">
    <div class="row">
        <div class="text-body-tertiary">
            <h3 class="mx-3">@ViewData["Title"]</h3>
        </div>
    </div>

    <div class="row justify-content-center text-center mx-auto">
        <hr/>
        <dl class="row justify-content-start">
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Supplier.CompanyName)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Supplier.CompanyName)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Supplier.ContactName)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Supplier.ContactName)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Supplier.ContactTitle)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Supplier.ContactTitle)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Supplier.Address)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Supplier.Address)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Supplier.City)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Supplier.City)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Supplier.Region)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Supplier.Region)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Supplier.PostalCode)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Supplier.PostalCode)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Supplier.Country)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Supplier.Country)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Supplier.Phone)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Supplier.Phone)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Supplier.Fax)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Supplier.Fax)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Supplier.HomePage)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Supplier.HomePage)
            </dd>
        </dl>
        <hr />
    </div>
 
    <div class="mx-auto py-2 row justify-content-evenly justify-content-md-evenly justify-content-lg-evenly">
        <a asp-page="./Edit" asp-route-id="@Model.Supplier.SupplierID" class="btn btn-sm btn-outline-success rounded-4 shadow float-start col-2">Edit</a>
        <a asp-page="./Index" class="btn btn-sm btn-outline-danger rounded-4 shadow float-end col-2">Back</a>
    </div>
</div>


